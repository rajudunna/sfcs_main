        #tablefilter {
            font-size: 12px;
        }
        
    </style>

</head>
<body>
<div class="panel panel-primary">
<!-- To Show Current Progress-->
<div id="load_tweets"></div>
<!-- To Show Current Progress-->
<div class="panel-heading"><b>@{@Page.page_title;}: PSD wise BOM Summary</b></div>
<!-- <div id="page_heading"><span style="float: left"><h3>@{@Page.page_title;}: PSD wise BOM Summary</h3></span><span style="float: right"> @{@Html.Raw(Page.help_link);} </span></div> -->
<!-- index.html -->
<div class="panel-body" id="form">
<form class="panel-body" id="myForm"> 
<div class="form-inline">
<div class="form-group">
Start Date: <input type="text" class="form-control"  size="8" min="0" name="sdate" id="sdate" value=""  onclick="javascript:NewCssCal('sdate','yyyyMMdd')">
</div>
<div class="form-group">
End Date: <input type="text" class="form-control" size="8" min="0" name="edate" id="edate" value="" onclick="javascript:NewCssCal('edate','yyyyMMdd')">
</div>
<div class="form-group">
Buyer Division:
    <select name="buyer" class="form-control" id="select">
        @{
            var items = Page.buyerdivision.Split(new[]{';'});
            var items_title = Page.buyerdivision_title.Split(new[]{';'});
            for(int i=0;i<items.Length;i++)
            {
                @Html.Raw("<option value='"+items[i]+"'>"+items_title[i]+"</option>");
            }
        }
    </select>
</div>
<div class="form-group">
Style: <input  type="text" class="form-control" name="style"/>
</div>

<br/><br/>
<div class="form-group">
Item Codes:
    <select name="item_code" class="form-control" id="select">
        @{
            items = Page.item_codes.Split(new[]{';'});
            items_title = Page.item_codes_title.Split(new[]{';'});
            for(int i=0;i<items.Length;i++)
            {
                @Html.Raw("<option value='"+items[i]+"'>"+items_title[i]+"</option>");
            }
        }
    </select>
</div>
<div class="form-group">
Show Only Pendings Items: <input type="checkbox" class="form-control" id="show_pendings" name="show_pendings" value="1" />
</div>
<div class="form-group">
<input type="button" id="myButton" class="btn btn-primary" value="Filter"/>
</div>
</div>
</form>
</div>

<div id="ajax-panel">

@{
    if(!Request["style"].IsEmpty()){
        @RenderPage("PRJ_RMW_0001_P_0009_REP_FORMAT_4.cshtml");
    }
}
</div>
</div>

</body>
</html>

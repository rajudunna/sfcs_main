    <body>
        @{
            db_object db_class=new db_object();

                        
            //Rebuild and Reorganize the Index   
            //db_class.exe_queries("BEK_DBS_RMW_0001","exec [BEK_DBS_RMW_0001].[dbo].[index_organize_sp]");         


            //Date Period Selection
            DateTime d = DateTime.Now;

            //To Track Page Start Time
            db_class.exe_queries("BEK_DBS_RMW_0001","insert into [BEK_DBS_RMW_0001].[dbo].[T_0001_010_EXE_LOG] (page_name,start_time,log_user) values('"+Page.g_page_name+"','"+d.ToString("yyyy-MM-dd HH:mm:ss").ToString()+"','"+Page.g_log_user+"')");
                        
            var page_log_in_id=db_class.last_insert_id();


            string prev_limit=d.AddDays(-3).ToString("dd-MMM-yyyy").ToString() + " 12:00:00 AM";
            string next_limit=d.AddDays(Page.period_range).ToString("dd-MMM-yyyy").ToString() + " 12:00:00 AM";

            
            //Select to be prepared bom details from FR Pool View
            var result_set1=db_class.show_result("BEK_DBS_RMW_0001","select schedule,color,fr_pool_tid from [BEK_DBS_RMW_0001].[dbo].[V_0001_0001_FRPLAN_POOL] where (bom_track_status=0 or bom_track_status is null)  and production_date<='"+next_limit+"'");
            int check=0; //To flag and update only for schedules bom track status with material items.
            foreach(var record in result_set1)
            {
               
               //To extract item level detail for given schedule and color
               var result_set2=db_class.show_result("BEK_DBS_RMW_0001","select [material_item],max([proc_grp]) as proc_grp,MAX(item_description) as item_description,MAX(mat_colour) as mat_colour,MAX(mat_size) as mat_size, sum([required_]) as required, sum(issued) as issued, max(consumption) as consumption from [BEK_DBS_RMW_0001].[dbo].[T_0001_001_M3BOMPOOL] where [BEK_DBS_RMW_0001].[dbo].TRIM(schedule)=[BEK_DBS_RMW_0001].[dbo].trim('"+record.schedule+"') and [BEK_DBS_RMW_0001].[dbo].TRIM(GMT_COLOUR)=[BEK_DBS_RMW_0001].[dbo].TRIM('"+record.color+"') group by [material_item]");
               
               //Check to confirm all item details are available or not
               check=0;
               check=db_class.queries_count();

               if(check>=2 && result_set2!=null)
               {
                   //To extract values from macro
                   foreach(var result_val in result_set2)
                   {
                        string item_description=result_val.item_description;
                        string mat_colour=result_val.mat_colour;
                        //To insert values in table
                        //db_class.exe_queries("BEK_DBS_RMW_0001","INSERT INTO [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] ([fr_pool_tid_ref],[bom_material_item],[bom_req_qty],[bom_issued_qty],[PROC_GRP],[ITEM_DESCRIPTION],[MAT_COLOUR],[MAT_SIZE],[CONSUMPTION]) VALUES ("+"'"+record.fr_pool_tid+"',"+"'"+result_val.material_item+"',"+"'"+result_val.required+"',"+"'"+result_val.issued+"',"+"'"+result_val.proc_grp+"',"+"'"+item_description.Replace("'", "''")+"',"+"'"+mat_colour.Replace("'", "''")+"',"+"'"+result_val.mat_size+"',"+result_val.consumption+")");

                        //New Code 2015-01-21 (KiranG) to avoid duplicate values in BOM
                        db_class.exe_queries("BEK_DBS_RMW_0001","INSERT INTO [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] ([fr_pool_tid_ref],[bom_material_item],[bom_req_qty],[bom_issued_qty],[PROC_GRP],[ITEM_DESCRIPTION],[MAT_COLOUR],[MAT_SIZE],[CONSUMPTION]) select "+"'"+record.fr_pool_tid+"',"+"'"+result_val.material_item+"',"+"'"+result_val.required+"',"+"'"+result_val.issued+"',"+"'"+result_val.proc_grp+"',"+"'"+item_description.Replace("'", "''")+"',"+"'"+mat_colour.Replace("'", "''")+"',"+"'"+result_val.mat_size+"',"+result_val.consumption+" where not exists (select bom_tid from [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] where cast(fr_pool_tid_ref as varchar(max))+bom_material_item='"+record.fr_pool_tid+result_val.material_item+"')");

                        //Check to confirm all item details are available or not
                   }

               
                   db_class.exe_queries("BEK_DBS_RMW_0001","update [BEK_DBS_RMW_0001].[dbo].[T_0001_003_FR_POOL] set bom_track_status=1 where fr_pool_tid="+record.fr_pool_tid);
               }
                              
            } 
    
         }

        @{
            d = DateTime.Now;
            //To Track Page End Time
            db_class.exe_queries("BEK_DBS_RMW_0001","update [BEK_DBS_RMW_0001].[dbo].[T_0001_010_EXE_LOG] set end_time='"+d.ToString("yyyy-MM-dd HH:mm:ss").ToString()+"' where log_id='"+page_log_in_id+"'");

            //To update latest changed items into BOM details list.

            udf_functions udf_class=new udf_functions();
                                

            //Select to be prepared bom details from FR Pool View
            var result_set11=db_class.show_result("BEK_DBS_RMW_0001","select schedule,color,fr_pool_tid from [BEK_DBS_RMW_0001].[dbo].[V_0001_0001_FRPLAN_POOL] where bom_track_status=1 and prod_status=0 and production_date<='"+next_limit+"'");
            check=0; //To flag and update only for schedules bom track status with material items.
            foreach(var record1 in result_set11)
            {
               
               //To extract item level detail for given schedule and color
               var result_set22=db_class.show_result("BEK_DBS_RMW_0001","select [material_item],max([proc_grp]) as proc_grp,MAX(item_description) as item_description,MAX(mat_colour) as mat_colour,MAX(mat_size) as mat_size, sum([required_]) as required, sum(issued) as issued, max(consumption) as consumption from [BEK_DBS_RMW_0001].[dbo].[T_0001_001_M3BOMPOOL_BACKUP] where [BEK_DBS_RMW_0001].[dbo].TRIM(schedule)=[BEK_DBS_RMW_0001].[dbo].trim('"+record1.schedule+"') and [BEK_DBS_RMW_0001].[dbo].TRIM(GMT_COLOUR)=[BEK_DBS_RMW_0001].[dbo].TRIM('"+record1.color+"') and material_item not in (select bom_material_item from [BEK_DBS_RMW_0001].[dbo].[V_0001_0005_FR_BOM_TRACK_REP] where [BEK_DBS_RMW_0001].[dbo].TRIM(schedule)=[BEK_DBS_RMW_0001].[dbo].trim('"+record1.schedule+"') and [BEK_DBS_RMW_0001].[dbo].TRIM(color)=[BEK_DBS_RMW_0001].[dbo].TRIM('"+record1.color+"')) group by [material_item]");
               
               //Check to confirm all item details are available or not
               check=0;
               check=db_class.queries_count();

               if(check>0)
               {
                   //To extract values from macro
                   foreach(var result_val1 in result_set22)
                   {
                        string item_description=result_val1.item_description;
                        string mat_colour=result_val1.mat_colour;
                        //To insert values in table
                        //db_class.exe_queries("BEK_DBS_RMW_0001","INSERT INTO [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] ([fr_pool_tid_ref],[bom_material_item],[bom_req_qty],[bom_issued_qty],[PROC_GRP],[ITEM_DESCRIPTION],[MAT_COLOUR],[MAT_SIZE],[CONSUMPTION]) VALUES ("+"'"+record1.fr_pool_tid+"',"+"'"+result_val1.material_item+"',"+"'"+result_val1.required+"',"+"'"+result_val1.issued+"',"+"'"+result_val1.proc_grp+"',"+"'"+item_description.Replace("'", "''")+"',"+"'"+mat_colour.Replace("'", "''")+"',"+"'"+result_val1.mat_size+"',"+result_val1.consumption+")");

                        //New Code 2015-01-21 (KiranG) to avoid duplicate values in BOM
                        //db_class.exe_queries("BEK_DBS_RMW_0001","INSERT INTO [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] ([fr_pool_tid_ref],[bom_material_item],[bom_req_qty],[bom_issued_qty],[PROC_GRP],[ITEM_DESCRIPTION],[MAT_COLOUR],[MAT_SIZE],[CONSUMPTION]) select "+"'"+record1.fr_pool_tid+"',"+"'"+result_val1.material_item+"',"+"'"+result_val1.required+"',"+"'"+result_val1.issued+"',"+"'"+result_val1.proc_grp+"',"+"'"+item_description.Replace("'", "''")+"',"+"'"+mat_colour.Replace("'", "''")+"',"+"'"+result_val1.mat_size+"',"+result_val1.consumption+" where cast(fr_pool_tid_ref as varchar(max))+bom_material_item='"+record1.fr_pool_tid+result_val1.material_item+"')");

                        //Bug identified in above query that it was not executed properly //KiranG 20160713
                        db_class.exe_queries("BEK_DBS_RMW_0001","INSERT INTO [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] ([fr_pool_tid_ref],[bom_material_item],[bom_req_qty],[bom_issued_qty],[PROC_GRP],[ITEM_DESCRIPTION],[MAT_COLOUR],[MAT_SIZE],[CONSUMPTION]) select "+"'"+record1.fr_pool_tid+"',"+"'"+result_val1.material_item+"',"+"'"+result_val1.required+"',"+"'"+result_val1.issued+"',"+"'"+result_val1.proc_grp+"',"+"'"+item_description.Replace("'", "''")+"',"+"'"+mat_colour.Replace("'", "''")+"',"+"'"+result_val1.mat_size+"',"+result_val1.consumption+" where not exists (select bom_tid from [BEK_DBS_RMW_0001].[dbo].[T_0001_004_BOM_POOL] where cast(fr_pool_tid_ref as varchar(max))+bom_material_item='"+record1.fr_pool_tid+result_val1.material_item+"')");

                        //Check to confirm all item details are available or not
                   }

               }

               //To update existing item codes as 0
                var result_set3=db_class.show_result("BEK_DBS_RMW_0001","SELECT bom_tid,cast(m3bompool_tid_ref as varchar(max)) as m3bompool_tid_ref from [BEK_DBS_RMW_0001].dbo.V_0001_0005_FR_BOM_TRACK_REP where [BEK_DBS_RMW_0001].[dbo].TRIM(schedule)=[BEK_DBS_RMW_0001].[dbo].trim('"+record1.schedule+"') and [BEK_DBS_RMW_0001].[dbo].TRIM(color)=[BEK_DBS_RMW_0001].[dbo].TRIM('"+record1.color+"') and bom_material_item not in (SELECT distinct [MATERIAL_ITEM] FROM [BEK_DBS_RMW_0001].[dbo].[T_0001_001_M3BOMPOOL_BACKUP] where [BEK_DBS_RMW_0001].[dbo].TRIM(schedule)=[BEK_DBS_RMW_0001].[dbo].trim('"+record1.schedule+"') and [BEK_DBS_RMW_0001].[dbo].TRIM(GMT_COLOUR)=[BEK_DBS_RMW_0001].[dbo].TRIM('"+record1.color+"')) and (bom_rem_tid_ref is null or bom_rem_tid_ref=0)");

                check=0;
                check=db_class.queries_count();

                if(check>0)
                {
                    foreach(var result_record in result_set3)
                    {
                            udf_class.FN_REM_UPDATE("0","","M3 BOM Revised",result_record.bom_tid,result_record.m3bompool_tid_ref,Page.g_log_user);
                    }
                }         
            } 

            d = DateTime.Now;
            //To Track Page End Time
            db_class.exe_queries("BEK_DBS_RMW_0001","update [BEK_DBS_RMW_0001].[dbo].[T_0001_010_EXE_LOG] set end_time='"+d.ToString("yyyy-MM-dd HH:mm:ss").ToString()+"' where log_id='"+page_log_in_id+"'");
            
            
